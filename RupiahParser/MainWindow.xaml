<Window x:Class="RupiahParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Currency Formatter" Height="206" Width="269">
    <Grid>
        <Button x:Name="buttonParse" Content="Format" HorizontalAlignment="Left" Margin="176,10,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="buttonParse_Click"/>
        <TextBox x:Name="textEnter" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="Enter number" VerticalAlignment="Top" Width="161" GotFocus="textEnter_GotFocus" VerticalContentAlignment="Center" KeyUp="textEnter_KeyUp"/>
        <TextBox x:Name="textResult" HorizontalAlignment="Left" Height="102" Margin="10,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="241" IsHitTestVisible="True" AllowDrop="False"/>
        <Button x:Name="buttonCopy" Content="Copy" HorizontalAlignment="Left" Margin="176,145,0,0" VerticalAlignment="Top" Width="75" Click="buttonCopy_Click"/>

    </Grid>
</Window>
